{
  "$schema": "http://json.schemastore.org/template",
  "author": "Olga Nelioubov",
  "classifications": [
    "Api",
    "Code",
    "Reference"
  ],
  "identity": "Dotnet.Template.Demo",
  "name": "Demo Template",
  "shortName": "demo-template",
  "tags": {
    "language": "C#",
    "type": "item"
  },
  "symbols": {
    "serviceName": {
      "type": "parameter",
      "datatype": "string",
      "description": "This is what the solution will be called, along with the corresponding API and Tests projects",
      "defaultValue": "generic",
      "FileRename": "ServiceDemo",
      "replaces": "ServiceDemo",
      "isRequired": true
    },
    "lowerCaseServiceName": {
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source": "serviceName",
        "toLower": true
      },
      "replaces": "servicedemo"
    },
    "useAutomation": {
      "type": "parameter",
      "datatype": "bool",
      "description": "Use this to enable/disable Nuke, GitHub Actions, and Terraform",
      "defaultValue": "true"
    }
  },
  "sources":[{
    "modifiers": [
      {
        "exclude": [
          "**/[Bb]in/**",
          "**/[Oo]bj/**",
          ".template.config/**/*",
          "**/*.filelist",
          "**/*.user",
          "**/*.lock.json",
          "**/.vs/**",
          "**/.vscode/**",
          "**/.git/**",
          "packageSettings.csproj",
          "**/.tmp/**",
          ".idea/**",
          "**/artifacts/**",
          "**/.terraform/**"
        ]
      },
      {
        "exclude": [
          "**/.nuke",
          "**/build*",
          "**/build/**",
          "**/.github/**",
          "**/terraform/**"
        ],
        "condition": "(!useAutomation)"
      }
    ]
  }],
  "postActions": [
    {
      "condition": "(OS != \"Windows_NT\")",
      "description": "Make scripts executable",
      "manualInstructions": [{ "text": "Run 'chmod +x *.sh'" }],
      "actionId": "CB9A6CF3-4F5C-4860-B9D2-03A574959774",
      "args": {
        "+x": "*.sh"
      },
      "continueOnError": true
    },
    {
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "description": "Sets up the local and remote git repo and creates an initial commit to [main] by calling initializeGitRepo.sh",
      "args": {
        "executable": "initializeGitRepo.sh",
        "args": "",
        "redirectStandardOutput": "false"
      },
      "manualInstructions": [{
        "text": "Run 'initializeGitRepo.sh'"
      }],
      "continueOnError": false
    }
  ],
  "placeholderFilename": "-.-"
}